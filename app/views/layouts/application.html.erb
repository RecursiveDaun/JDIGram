<!DOCTYPE html>
<html>
<head>
  <title>JDIGram</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-white navbar-custom mb-2">
    <div class="container">
      <%= link_to "JDIGram", welcome_index_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse">
        <%= form_tag search_path, method: :get do %>
          <div class="col-lg-12 text-center">
            <div class="input-group">
              <%= text_field_tag 'search-keyword', nil, placeholder: "Enter username", class: "form-control" %>
              <div class="input-group-append">
                <%= submit_tag "find", name: nil, class: 'btn btn-secondary' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <%- if current_user.nil? %>
            <li class="nav-item">
              <%= link_to "Log In", new_user_session_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign up",  new_user_registration_path, class: 'nav-link' %>
            </li>
          <%- else %>
            <!-- User profile link-->
            <li class="nav-item mr-2">
              <%= button_to user_profile_path(current_user.profile), method: :get, class: 'button_avatar_link_to_profile' do %>
                <%- if current_user.profile.avatar.attached? %>
                  <%= image_tag current_user.profile.avatar, class: 'avatar_link_to_profile' %>
                <%- else %>
                  <%= image_tag 'user_avatar_placeholder.png', class: 'avatar_link_to_profile' %>
                <% end %>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to "Friends", user_profile_friends_path(current_user.profile), class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Conversations",  conversation_index_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="notice-container">
    <% if notice %>
      <div class="alert alert-success">
        <%= notice %>
      </div>
    <% end %>
    <% if alert %>
      <div class="alert alert-danger">
        <%= alert %>
      </div>
    <% end %>
  </div>

  <%= yield %>
</body>
</html>
