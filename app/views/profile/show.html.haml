%main
  .container.mt-5
    .row
      .col-lg-3
        - if @profile.avatar.attached?
          = image_tag @profile.avatar, class: 'avatar_photo'
      .col-lg-3.align-self-center
        .row
          .col-lg-10.text-left
            %label{:class => 'username_label'}= @profile.name
          .col-lg-2
            = button_to edit_profile_path(@profile.user), method: :get, class: 'btn btn-primary' do
              %i.fa.fa-edit
        .row
          .col-lg-12.text-left
            %label= @profile.age