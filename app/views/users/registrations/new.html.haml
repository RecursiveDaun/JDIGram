= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .container
    %h2.text-center.pt-5 Sign up
    .row.text-center
      .col-lg-12
        .row.pt-2
          .col-lg-4
          .col-lg-4
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'form-control'
          .col-lg-4
        .row.pt-2
          .col-lg-4
          .col-lg-4
            = f.text_field :nickname, placeholder: 'Nickname', class: 'form-control', required: true
          .col-lg-4
        .row.pt-2
          .col-lg-4
          .col-lg-4
            = f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: 'form-control'
          .col-lg-4
        .row.pt-2
          .col-lg-4
          .col-lg-4
            = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm password', class: 'form-control'
          .col-lg-4
    .text-center.pt-5
      = f.submit 'Sign up', class: 'btn btn-secondary'