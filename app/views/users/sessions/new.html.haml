= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .container
    %h2.text-center.pt-5 Sign in
    .row.text-center
      .col-lg-12
        .row.pt-2
          .col-lg-4
          .col-lg-4
            = f.text_field :login, autofocus: true, placeholder: 'Email/Username', class: 'form-control'
          .col-lg-4
        .row.pt-2
          .col-lg-4
          .col-lg-4
            = f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'form-control'
          .col-lg-4
    .text-center.pt-5
      = f.submit 'Sign in', class: 'btn btn-secondary'
    .row.pt-5
      .col-lg-4
      .col-lg-4
        = render "devise/shared/links"
      .col-lg-4